from PyQt5.QtWidgets import*
from PyQt5.QtCore import Qt
from PyQt5.QtGui import QPixmap
from PyQt5 import QtGui

App = QApplication([])
Win = QWidget()
Win.resize(700, 500)
Win.setWindowTitle("Steam")
Button = QPushButton("Download")
Buttonn = QPushButton("Download")
Buttonnn = QPushButton("Download")
Win.show()

LabelP = QLabel("")
LabelP.hide()
PixmapImage = QPixmap("Steam.png")
W, h, = LabelP.width(), LabelP.height()
PixmapImage = PixmapImage.scaled(100, 65, Qt.KeepAspectRatio)
LabelP.setPixmap(PixmapImage)
LabelA = QLabel("")
LabelA.hide()
PixmapImage = QPixmap("Avatar.png")
W, h, = LabelA.width(), LabelA.height()
PixmapImage = PixmapImage.scaled(100, 65, Qt.KeepAspectRatio)
LabelA.setPixmap(PixmapImage)
LabelC = QLabel("")
LabelC.hide()
PixmapImage = QPixmap("Counter-Strike.png")
W, h, = LabelC.width(), LabelC.height()
PixmapImage = PixmapImage.scaled(200, 200, Qt.KeepAspectRatio)
LabelC.setPixmap(PixmapImage)
LabelD = QLabel("")
LabelD.hide()
PixmapImage = QPixmap("Dota.png")
W, h, = LabelD.width(), LabelD.height()
PixmapImage = PixmapImage.scaled(200, 200, Qt.KeepAspectRatio)
LabelD.setPixmap(PixmapImage)
LabelT = QLabel("")
LabelT.hide()
PixmapImage = QPixmap("Team Fortress 2.png")
W, h, = LabelT.width(), LabelT.height()
PixmapImage = PixmapImage.scaled(200, 200, Qt.KeepAspectRatio)
LabelT.setPixmap(PixmapImage)

LabelP.show()
LabelC.show()
LabelD.show()
LabelT.show()
LabelP.show()

W = QVBoxLayout()
HO = QHBoxLayout()
HT = QHBoxLayout()
HR = QHBoxLayout()
HO.addWidget(LabelP)
HO.addWidget(LabelA)
HT.addWidget(LabelC)
HT.addWidget(LabelD)
HT.addWidget(LabelT)
HR.addWidget(Button)
HR.addWidget(Buttonn)
HR.addWidget(Buttonnn)
W.addLayout(HO)
W.addLayout(HT)
W.addLayout(HR)

def Notification():
        Report = QMessageBox()
        Report.setWindowTitle("Notification")
        Report.setText("Coming Soon!")
        Report.show()
        Report.exec_()
Button.clicked.connect(Notification)
Buttonn.clicked.connect(Notification)
Buttonnn.clicked.connect(Notification)

Win.setLayout(W)
App.exec_()
